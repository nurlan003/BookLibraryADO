        <TextBox x:Name="bkPages" HorizontalAlignment="Left" Margin="92,266,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100" Height="32"/>
        <TextBox x:Name="bkPrice" HorizontalAlignment="Left" Margin="92,208,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100" Height="32"/>


        <TextBlock HorizontalAlignment="Left" Margin="129,130,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
